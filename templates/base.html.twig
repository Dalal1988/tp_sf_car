<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
		<link rel="stylesheet" href="{{asset ('css/style.css')}}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
	<img src="{{asset ('media/-180591.jpg')}}" class="img-fluid" alt="bugatti">
    <header class="p-3 bg-dark text-white">
			<div class="container">
				<div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
					<a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
						<svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"/></svg>
					</a>

					<ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
						<li>
							<a href="{{path ('car_list')}}" class="nav-link px-2 text-white">Cars</a>
						</li>
						<li>
							<a href="{{path ('brand_list')}}" class="nav-link px-2 text-white">Brands</a>
						</li>
						<li>
							<a href="{{path ('contact')}}" class="nav-link px-2 text-white">Contactez-nous</a>
						</li>
					</ul>
					<form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" action="{{ path ('admin_search') }}" method="get">
						<input type="search" class="form-control form-control-dark" name="term" id="" placeholder="Search..." aria-label="Search">
					</form>

					<div class="text-end">
                        <a href="{{path ('app_login')}}">
                        	<button type="button" class="btn btn-outline-light me-2">Sign In</button>
                        </a>
					</div>
				</div>
			</div>
		</header>

		{% for gbrand in gbrands.getAll() %}
			<h6>{{ gbrand.name }}</h6>
		{% endfor %}

		{% for ggroup in ggroups.getAll %}
			<h6>{{ ggroup.name }}</h6>
		{% endfor %}


        {% block main %}{% endblock %}

		</br>
		</br>
		</br>
		<div class="container">
			<footer class="py-3 my-4">
				<ul class="nav justify-content-center border-bottom pb-3 mb-3">
					<li class="nav-item">
						<a href="{{path ('car_list')}}" class="nav-link px-2 text-muted">Home</a>
					</li>
					<li class="nav-item">
						<a href="{{path ('app_login')}}" class="nav-link px-2 text-muted">Sign in</a>
					</li>
					<li class="nav-item">
						<a href="#" class="nav-link px-2 text-muted">FAQs</a>
					</li>
					<li class="nav-item">
						<a href="#" class="nav-link px-2 text-muted">About</a>
					</li>
				</ul>
				<p class="text-center text-muted">&copy; 2022 Dalal EL HILALI</p>
			</footer>
		</div>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	</body>
</html>
